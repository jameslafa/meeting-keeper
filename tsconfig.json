{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
